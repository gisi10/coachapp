<%= provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
	<div class="span 6 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.submit "Sign in", class: "btn btn-large btn_primary" %>
			
		<% end %> 

		<p>Neuer Nutzer ? <%= link_to "Jetzt registrieren!", signup_path %></p>
	</div>
</div>